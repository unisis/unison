<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Job Steps list -->
        <act_window 
            id="action_job_step"
            name="Job Step"
            res_model="unison.job_step"
            view_mode="tree,form"
        />
        
        <!-- Menu item to open Job Steps List -->
        <menuitem 
            id="menu_job_step"
            name="Job Steps"
            parent="unison.menu_jobs"
            sequence="30"
            action="action_job_step"
        />

        <!-- Job Steps Tree -->
        <record id="view_tree_job_step" model="ir.ui.view">
            <field name="name">Job Steps Tree</field>
            <field name="model">unison.job_step</field>
            <field name="arch" type="xml">
                <tree create="true" delete="false" editable="false">
                    <field name="job_id"/>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="success"/>
                </tree>
            </field>
        </record>

        <!-- Job Steps Form -->
        <record id="view_form_job_step" model="ir.ui.view">
            <field name="name">Job Step Form</field>
            <field name="model">unison.job_step</field>
            <field name="arch" type="xml">
                <form string="Job Step" create="true" delete="true" editable="true">
                    <header>
                        <!-- <button name="xxxxxxx" type="object" string="Button Name" /> -->
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="job_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="sequence" readonly="1"/>
                                <field name="model" readonly="1"/>
                                <field name="function" readonly="1"/>
                                <field name="date_start" readonly="1"/>
                                <field name="date_end" readonly="1"/>
                                <field name="success" readonly="1"/>
                                <field name="output" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
