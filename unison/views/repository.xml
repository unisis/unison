<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Repositories list -->
        <act_window 
            id="action_repository"
            name="Repositories"
            res_model="unison.repository"
            view_mode="tree,form"
        />
        
        <!-- Menu item to open Repositories List -->
        <menuitem 
            id="menu_repository"
            name="Repositories"
            parent="unison.menu_code"
            sequence="20"
            action="action_repository"
        />

        <!-- Repositories Tree -->
        <record id="view_tree_repository" model="ir.ui.view">
            <field name="name">Repository Tree</field>
            <field name="model">unison.repository</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="repository_type_id"/>
                    <field name="url"/>
                </tree>
            </field>
        </record>

        <!-- Repository Form -->
        <record id="view_form_repository" model="ir.ui.view">
            <field name="name">Repository Form</field>
            <field name="model">unison.repository</field>
            <field name="arch" type="xml">
                <form string="Repository">
                    <header>
                        <!-- <button name="xxxxxxx" type="object" string="Button Name" /> -->
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="repository_type_id"/>
                                <field name="url"/>
                                <field name="description"/>
                                <field name="active"/>
                                <field name="notes"/>
                            </group>
                            <group name="group_right">
                                <field name="clone_command"/>
                                <field name="ssh_private_key"/>
                                <field name="forked_from_url"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
