<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Job Entities list -->
        <act_window 
            id="action_job_entity"
            name="Job Entity"
            res_model="unison.job_entity"
            view_mode="tree,form"
        />
        
        <!-- Menu item to open Job Entities List -->
        <menuitem 
            id="menu_job_entity"
            name="Job Entities"
            parent="unison.menu_jobs"
            sequence="30"
            action="action_job_entity"
        />

        <!-- Job Entities Tree -->
        <record id="view_tree_job_entity" model="ir.ui.view">
            <field name="name">Job Entities Tree</field>
            <field name="model">unison.job_entity</field>
            <field name="arch" type="xml">
                <tree create="true" delete="false" editable="false">
                    <field name="job_id"/>
                    <field name="type"/>
                    <field name="code"/>
                    <field name="role"/>
                </tree>
            </field>
        </record>

        <!-- Job Entities Form -->
        <record id="view_form_job_entity" model="ir.ui.view">
            <field name="name">Job Entity Form</field>
            <field name="model">unison.job_entity</field>
            <field name="arch" type="xml">
                <form string="Job Entity" create="true" delete="true" editable="true">
                    <header>
                        <!-- <button name="xxxxxxx" type="object" string="Button Name" /> -->
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="job_id" readonly="1"/>
                                <field name="type" readonly="1"/>
                                <field name="code" readonly="1"/>
                                <field name="role" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
