<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Cloud list -->
        <act_window 
            id="action_cloud"
            name="Clouds"
            res_model="unison.cloud"
            view_mode="tree,form"
        />
        
        <!-- Menu item to open Cloud List -->
        <menuitem 
            id="menu_cloud"
            name="Clouds"
            parent="unison.menu_nodes"
            sequence="10"
            action="action_cloud"
        />

        <!-- Cloud Tree -->
        <record id="view_tree_cloud" model="ir.ui.view">
            <field name="name">Cloud Tree</field>
            <field name="model">unison.cloud</field>
            <field name="arch" type="xml">
                <tree create="top" delete="false" editable="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Cloud Form -->
        <record id="view_form_cloud" model="ir.ui.view">
            <field name="name">Cloud Form</field>
            <field name="model">unison.cloud</field>
            <field name="arch" type="xml">
                <form string="Cloud" create="true" delete="true" editable="true">
                    <header>
                        <!-- <button name="xxxxxxx" type="object" string="Button Name" /> -->
                    </header>
                    <sheet>
                        <group name="group_center">
                            <button type="object" name="get_droplets_list" string="Get Droplets" />
                            <field name="code"/>
                            <field name="name"/>
                            <field name="api_key"/>
                            <field name="notes"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
