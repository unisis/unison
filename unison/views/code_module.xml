<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Code Modules list -->
        <act_window 
            id="action_code_module"
            name="Code Modules"
            res_model="unison.code_module"
            view_mode="tree,form"
        />
        
        <!-- Menu item to open Code Modules List -->
        <menuitem 
            id="menu_code_modules"
            name="Code Modules"
            parent="unison.menu_code"
            sequence="70"
            action="action_code_module"
        />

        <!-- Code Modules Tree -->
        <record id="view_tree_code_module" model="ir.ui.view">
            <field name="name">Code Modules Tree</field>
            <field name="model">unison.code_module</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="code_id"/>
                    <field name="module_name"/>
                </tree>
            </field>
        </record>

        <!-- Code Module Form -->
        <record id="view_form_code_module" model="ir.ui.view">
            <field name="name">Code Module Form</field>
            <field name="model">unison.code_module</field>
            <field name="arch" type="xml">
                <form string="Code">
                    <header>
                        <!-- <button name="xxxxxxx" type="object" string="Button Name" /> -->
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="code_id"/>
                                <field name="module_name"/>
                            </group>
                            <group name="group_right">
                                <field name="active"/>
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
