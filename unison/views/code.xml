<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Action to open Codes list -->
        <act_window 
            id="action_code"
            name="Codes"
            res_model="unison.code"
            view_mode="tree,form"
        />
        
        <!-- Menu item to open Codes List -->
        <menuitem 
            id="menu_codes"
            name="Codes"
            parent="unison.menu_code"
            sequence="50"
            action="action_code"
        />

        <!-- Codes Tree -->
        <record id="view_tree_code" model="ir.ui.view">
            <field name="name">Code Tree</field>
            <field name="model">unison.code</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="is_template"/>
                    <field name="hash"/>
                </tree>
            </field>
        </record>

        <!-- Code Form -->
        <record id="view_form_code" model="ir.ui.view">
            <field name="name">Code Form</field>
            <field name="model">unison.code</field>
            <field name="arch" type="xml">
                <form string="Code">
                    <header>
                        <!-- <button name="xxxxxxx" type="object" string="Button Name" /> -->
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="description"/>
                                <field name="is_template"/>
                                <field name="manual_config"/>
                                <field name="hash"/>
                            </group>
                            <group name="group_right">
                                <field name="active"/>
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
