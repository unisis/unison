<openerp>
    <data noupdate="1">
        <record id="ir_cron_cloud_cold_refresh" model="ir.cron">
            <field name="name">Cloud Cold Refresh</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1440</field>
            <field name="interval_type">minutes</field>
            <field name="priority">10</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'unison.refresher'"/>
            <field name="function" eval="'cloud_cold_refresh'"/>
        </record>
        <record id="ir_cron_cloud_hot_refresh" model="ir.cron">
            <field name="name">Cloud Hot Refresh</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field> <!-- PUT 2 -->
            <field name="interval_type">minutes</field>
            <field name="priority">20</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'unison.refresher'"/>
            <field name="function" eval="'cloud_hot_refresh'"/>
        </record>
        <record id="ir_cron_repos_refresh" model="ir.cron">
            <field name="name">Repos Refresh</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>  <!-- PUT 60 -->
            <field name="interval_type">minutes</field>
            <field name="priority">10</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'unison.refresher'"/>
            <field name="function" eval="'repos_refresh'"/>
        </record>
   </data>
</openerp>
