<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <!-- Clouds -->

        <record id="cloud_digitalocean" model="unison.cloud">
            <field name="code">digitalocean</field>
            <field name="name">DigitalOcean</field>
            <field name="api_key">[ENTER-API-KEY]</field>
            <field name="notes"></field>
            <field name="active">1</field>
        </record>

        <!-- Default Code Template for UniSis -->

        <record id="code_unisis" model="unison.code">
            <field name="name">UniSis Template</field>
            <field name="description">Default Template for New Installations</field>
            <field name="is_template">1</field>
            <field name="active">1</field>
        </record>

        <!-- Predefined Repo Groups used for Generic Code Template 8.0 -->

        <!-- Odoo SA Repo Group -->
        <record id="repo_group_odoo" model="unison.repo_group">
            <field name="name">odoo</field>
            <field name="description">Odoo SA Repos</field>
            <field name="url">https://github.com/odoo</field>
            <field name="sequence">1</field>
        </record>

        <!-- OCA Repo Group -->
        <record id="repo_group_oca" model="unison.repo_group">
            <field name="name">oca</field>
            <field name="description">OCA Repos</field>
            <field name="url">https://github.com/oca</field>
            <field name="sequence">2</field>
        </record>

        <!-- Adhoc Repo Group -->
        <record id="repo_group_adhoc" model="unison.repo_group">
            <field name="name">adhoc</field>
            <field name="description">Adhoc Repos</field>
            <field name="url">https://github.com/ingadhoc</field>
            <field name="sequence">3</field>
        </record>

        <!-- UniSis Repo Group -->
        <record id="repo_group_unisis" model="unison.repo_group">
            <field name="name">unisis</field>
            <field name="description">UniSis Repos</field>
            <field name="url">https://github.com/unisis</field>
            <field name="sequence">4</field>
        </record>

        <!-- Repositories used on Generic Code Template 8.0 -->

        <!-- Odoo Repo -->
        <record id="repo_odoo" model="unison.repo">
            <field name="name">odoo</field>
            <field name="description">Odoo Repo</field>
            <field name="repo_group_id" ref="repo_group_odoo"/>
            <field name="url">https://github.com/odoo/odoo</field>
            <field name="only_addons">False</field>
            <field name="clone_command">git clone git@github.com:odoo/odoo.git</field>
        </record>

    </data>
</openerp>
